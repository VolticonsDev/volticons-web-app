{
  "functions": {
    "api/**/*.js": { 
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/db-setup",
      "dest": "/api/db-setup.js"
    },
    {
      "src": "/api/shop-products",
      "dest": "/api/shop-products.js"
    },   
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "installCommand": "npm install --production=false"
}